extends ../shared/layout

block content
  .container
    include ../shared/searchbar.jade
    
    h1 Search Results
    if results
      p Matching the term "#{query}"
    else
      p No data was found matching the query "#{query}".
    
    if results
      #search-results
        .col-md-6
            a(href='/letter')
              .search-result
                .type
                  .icon
                    span.glyphicon.glyphicon-envelope
                .info
                  h2 Title
                .type
                  .icon
                    span.glyphicon.glyphicon-menu-right
