extends ../shared/layout

block content
  .container
    include ../shared/searchbar.pug

    #letter-view.card
      #toggle-pretty.selected Pretty
      #toggle-raw Raw

    #pretty.card
      #letter
        header
          h1#title= letter.title
          h2= letter.author

        div !{letter.text}

    #raw.card
      #letter-xml
        form(action='', method='post')
          textarea(name='xml')= raw
          button#btn-download Download
